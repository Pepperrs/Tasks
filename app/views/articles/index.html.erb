<h1>Listing Articles</h1>
<%= link_to 'New Task', new_article_path %>
<table border ="1">
  <tr>
    <th>Task</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Start</th>
    <th>Deadline</th>
    
    <th colspan="4"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.priority %></td>
      <td><%= article.startingtime.to_s(:long) %></td>
      <td><%= article.deadline.to_s(:long) %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>